{
  "name": "league-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "start": "node dotenv/config dist/server.js",
    "dev": "nodemon --watch .env --watch ./src -r dotenv/config --exec ts-node --files src/server.ts",
    "database:migrate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "database:update": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint ./src/**.ts --fix"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.3",
    "@mikro-orm/postgresql": "^4.5.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "discord.js": "^12.5.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/server.ts"
  }
}
