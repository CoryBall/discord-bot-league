{
  "name": "league-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "start": "node -r dotenv/config ./dist/server.js dotenv_config_path=env/dev.env",
    "start:prod": "node -r dotenv/config ./dist/server.js dotenv_config_path=env/prod.env",
    "dev": "nodemon --watch .env --watch ./src -r dotenv/config --exec ts-node --files src/server.ts dotenv_config_path=env/dev.env",
    "database:migrate": "cross-env DOTENV_CONFIG_PATH=env/dev.env node -r dotenv/config node_modules/@mikro-orm/cli/cli.js migration:create",
    "database:update": "cross-env DOTENV_CONFIG_PATH=env/dev.env node -r dotenv/config node_modules/@mikro-orm/cli/cli.js migration:up",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint ./src/**.ts --fix"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.41",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.3",
    "@mikro-orm/core": "^4.5.3",
    "@mikro-orm/postgresql": "^4.5.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "discord.js": "^12.5.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/server.ts"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/modules/orm/orm.config.ts",
      "./dist/modules/orm/orm.config.js"
    ]
  }
}
